<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/et_text"
              android:inputType="text"
              android:text="enter desc" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id='@+id/btn_generate'
                android:layout_margin="4dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_barcode" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:text='"generate QR code"'/>

        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/iv_barcode"
                   android:contentDescription="@string/app_name"/>

</android.support.constraint.ConstraintLayout>